<% layout("/layouts/boilerplate.ejs") %>
<body>

        <div class="row">
            <div class="col-8 offset-2">
                <br><br>
                <h3>Create A NEW Listing</h3> 
                <br>
        <form class="needs-validation" method="post" action="/listings" novalidate>
            <div class="mb-3">
                <label  for="title" class="form-label">Title</label>
                <input required placeholder="Add a catchy title" class="form-control" name="listing[title]"  type="text">
                <div class="invalid-feedback">Please enter the title</div>
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea required name="listing[description]" class="form-control"></textarea>
                <div class="invalid-feedback">Please enter the discription</div>
            </div>

            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input placeholder="Enter image URL" class="form-control" name="listing[image]" type="text">
            </div>

        
            

             <div class="row ">

                   <div class="mb-3 col-md-4">
                       <label for="price" class="form-label">Price</label>
                       <input required placeholder="Enter Price" class="form-control" name="listing[price]" >
                       <div class="invalid-feedback">Please enter valid price</div>
                   </div>
                <div class="mb-3 col-md-8">
                     <label for="country" class="form-label">Country</label>
                     <input required placeholder="India" class="form-control" name="listing[country]"  type="text">
                     <div class="invalid-feedback">Please enter the country name</div>
               </div>
            </div>
                <div class="mb-3">
                      <label for="location" class="form-label">Location</label>
                      <input required placeholder="Jaipur,Rajasthan" class="form-control" name="listing[location]" type="text">
                      <div class="invalid-feedback">Please enter the location</div>
                </div>


            <br><br>
            <button class="btn btn-dark add-btn">ADD</button>
            <br><br>
        </form>
    </div> 
 </div>
    </body>